@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudDialogProvider />
    <MudSnackbarProvider />
    <MudPopoverProvider />
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">MediReserva</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
                Inicio
            </MudNavLink>
            <MudNavLink Href="/citas" Icon="@Icons.Material.Filled.EventNote">
                Citas
            </MudNavLink>
            <MudNavLink Href="/pacientes" Icon="@Icons.Material.Filled.People">
                Pacientes
            </MudNavLink>
            <MudNavLink Href="/medicos" Icon="@Icons.Material.Filled.MedicalServices">
                Médicos
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}